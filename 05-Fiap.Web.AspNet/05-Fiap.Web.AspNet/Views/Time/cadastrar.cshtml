
@model Fiap.Web.AspNet.Models.Time

@{
    ViewData["Title"] = "cadastrar";
}

<p>Nome: @ViewBag.nome</p>
<p>Classificado: @ViewBag.classif</p>

<h1>Cadastrar</h1>

<form asp-action="cadastrar" asp-controller="Time">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <input style="position: relative; top: 1.5px" asp-for="Classificado" id="classif" />
        <label asp-for="Classificado">Classificado</label>
    </div>
    <div class="form-group">
        <label asp-for="Vitorias">Vitórias</label>
        <input asp-for="Vitorias" class="form-control" />
    </div>
    <label asp-for="DataFundacao">Data de Fundação</label>
    <input asp-for="DataFundacao" class="form-control" />
    <div class="form-group">
        <label asp-for="FolhaPagamento">Folha de Pagamento</label>
        <input asp-for="FolhaPagamento" class="form-control" />
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
    <a asp-controller="Time" asp-action="Listar" class="btn btn-default">Listar</a>

</form>

