@model Serie
@{
    ViewData["Title"] = "Editar";
}

<h1>Atualização de Série</h1>
<hr />

<div class="card">
    <div class="card-body">
        <form asp-controller="Serie" asp-action="Editar">
            <input asp-for="SerieId" />
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Genero"></label>
                <select asp-for="Genero" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
                    <option>Selecione</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DataLancamento"></label>
                <input asp-for="DataLancamento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Temporadas"></label>
                <input asp-for="Temporadas" class="form-control" />
            </div>

            <botao texto="Editar"></botao>
        </form>
    </div>
</div>